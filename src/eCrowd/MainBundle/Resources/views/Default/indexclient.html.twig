{% extends "eCrowdMainBundle:Default:base.html.twig" %}
{% trans_default_domain "eCrowd" %}

    {% block stylesheet %}
    {{parent()}}
{% stylesheets filter='cssrewrite' combine=true filter='cssrewrite'
    'bundles/ecrowdmain/css/*.css' 
%}
     <link rel="stylesheet" href="{{ asset_url  }}" />
{% endstylesheets %}    
    <!-- Begin MailChimp Signup Form -->
    <link href="http://cdn-images.mailchimp.com/embedcode/classic-081711.css" rel="stylesheet" type="text/css">
    <style type="text/css">
	#mc_embed_signup{background:#fff; clear:left; font:14px Helvetica,Arial,sans-serif; }
	/* Add your own MailChimp form style overrides in your site stylesheet or in this style block.
	   We recommend moving this block and the preceding CSS link to the HEAD of your HTML file. */
    </style>
    {% endblock %}
    
{% block container %}
    <div class="container-fluid" id="wrapper">
	<div class="container-fluid" id="featured">
            <div class="row-fluid">
                <div class="span12">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <h3 class="featured-title">HOLA {{ app.user.username }}</h3>
                    {% endif %}
                </div>
                
            </div>
            <div class="row-fluid">
                <div class="span10 offset1">
                    <h2 class="featured-subtitle">{{ 'featured.subtitle' | trans }}</h2>
                </div> 
                <div class="span1"></div>
                </div>
            
                
            <div class="row-fluid">
                <div class="span8 offset2" id="featured-subtitlewrap">
                    <div class="span5">
                        <h2 class="featured-subtitle2">1.000.000â‚¬ {{ 'featured.subtitle2.invested' | trans }}</h2>
                        <h2 class="featured-subtitle2">10 {{ 'featured.subtitle2.investors' | trans }}</h2>
                    </div>
                    <div class="span7">
                        <form id="formInteresados" action="" method="post">
                            <div class="row-fluid">
                                <div class="span8">
                                    <div class="condicionesMasMail">
                                        <div class="masInfo">
                                            <input id="emailIntesados" value="{{ 'featured.subtitle2.mail' | trans }}" name="introduce tu email" maxlength="60" type="text">
                                        </div>
                                        <div class="condicionesCheck">
                                            <div class="row-fluid">
                                                <div class="span1">
                                                    <input id="checkPoliticas" name="checkPoliticas" value="aceptar" type="checkbox">
                                                </div>
                                                <div class="span11">
                                                    <label><a id="link_politicas">{{ 'featured.subtitle2.conditionsquestion' | trans }}</a></label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    </div>
                                    <div class="span4">
                                        <div class="botones">
                                            <div class="floatL">
                                                <button class="btn btn-warning" type="button">{{ 'featured.subtitle2.open' | trans }}</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                           </form>
                       <div id="redireccion"></div>
                    </div>
                </div>
            </div> 
                
		
	
	</div><!-- end of #featured -->
               
	  
	<div class="row-fluid" id="widgets">
            <div class="widget-wrapper span4">
                {% render( url('e_crowd_latest_project')) %}
            </div>
                
            <div class="widget-wrapper span4">
                <div class="box-title">
                    {{"homepage.widget2.title"|trans }}
                </div>
                <div class="textwidget">
                    {{"homepage.widget2.text"|trans }}
                </div>
            </div>            
                

            <div class="widget-wrapper span4">
                <div class="box-title">
                    {{"homepage.widget3.title"|trans }}
                </div>
                <div class="textwidget">
                    {{"homepage.widget3.text"|trans }}
                </div>
            </div>            
    </div><!-- end of #widgets -->
			    </div>
{% endblock %}


{% block javascript %}
{{parent()}}
<script type="text/javascript" src="{{ asset('bundles/ecrowdmain/js/jquery.reveal.js') }}"></script>
<script type="text/javascript" src=" {{asset('bundles/ecrowdmain/js/utilities.js')}}"></script>
<script type='text/javascript' src=" {{asset('bundles/ecrowdmain/js/jcarousellite_1.0.1.min.js?ver=3.5.2')}}"></script>
<script>
  var htmlCaja = null;
</script>
<script>
  $(document).ready(function(){
    htmlCaja =  $("#mailId").html();
    ventanaModal('link_politicas', 'modal');
    $('#emailIntesados').on("keyup", function() {
      val = $('#emailIntesados').val();
      if($("#checkPoliticas").is(':checked') && isValidEmailAddress(val)){
        $('#suscribir').removeClass("disabled");
        $('#suscribir').attr("href","javascript:submitForm('2')");
        $('#abrircuenta').removeClass("disabled");
        $('#abrircuenta').removeClass("disabled");
        $('#abrircuenta').attr("href","javascript:submitForm('1')");
      } else {
        $('#suscribir').addClass("disabled");
        $('#suscribir').attr("href","#");
        $('#abrircuenta').addClass("disabled");
        $('#abrirCuenta').attr("href","#");
      }
    });
    $("#checkPoliticas").on("click", function() {
      val = $('#emailIntesados').val();
      if($("#checkPoliticas").is(':checked') && isValidEmailAddress(val)){
        $('#suscribir').removeClass("disabled");
        $('#suscribir').attr("href","javascript:submitForm('2')");
        $('#abrircuenta').removeClass("disabled");
        $('#abrircuenta').removeClass("disabled");
        $('#abrircuenta').attr("href","javascript:submitForm('1')");
      } else {
        $('#suscribir').addClass("disabled");
        $('#suscribir').attr("href","#");
        $('#abrircuenta').addClass("disabled");
        $('#abrirCuenta').attr("href","#");
      }
    });
    $('#emailIntesados').on("click", function(){
      if ($(this).val()==='introduce tu email') {
        $(this).attr('value','');
      }
    });
    
    $(function() {
      $('.teaser_grid_container').jCarouselLite({
          btnNext: ".next",
          btnPrev: ".prev"
      });
    });
  });
			
  function submitForm(opcion){
    var url = "";
    if (opcion==='1') {			
      url = "/interesados.html?method=grabar&email="+$("#emailIntesados").val()+"&accion=ABRIR_CUENTA&puerta=201";
    } else {
      url = "/interesados.html?method=grabar&email="+$("#emailIntesados").val()+"&accion=MAS_INFO&puerta=201";
    }
  $("#redireccion").load(url,function(){
    if (opcion==='2') {		
      $("#mailId").fadeIn(function(){$(this).html("<p>Gracias! Te mantendremos informado</p>")}).delay(3000).fadeIn(function(){$(this).html(htmlCaja)});
    } else {
      $("#formInteresados").attr('action', '/habilitarPujarContrato.html?email='+$("#emailIntesados").val());
      $("#formInteresados").submit();
    }					
   });
   
   
}
</script>
{% endblock %}


